<Window x:Class="MVVMMathProblemsBase.View.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMMathProblemsBase.View"
        mc:Ignorable="d"
        Title="Nezmatematika" Height="450" Width="800">
    <DockPanel>
        <Grid>
            <StackPanel VerticalAlignment="Top"
                        Margin="20">
                <Label Content="Jméno Příjmení, Třída"
                           HorizontalAlignment="Left"
                           Margin="5,5,5,0"/>
                <StackPanel HorizontalAlignment="Right">
                    <Button Content="Upravit profil"
                            Margin="5"/>
                    <Button Content="Přepnout profil"
                            Margin="5"/>
                </StackPanel>
            </StackPanel>
            <StackPanel VerticalAlignment="Bottom"
                        Margin="20">
                <Button Content="Začít nový kurz"
                            Margin="5"
                            VerticalAlignment="Bottom"/>
                    <Button Content="Pokračovat v kurzu"
                            Margin="5"/>
                    <Button Content="Statistiky"
                            Margin="5"/>
                    <Button Content="Nastavení"
                            Margin="5"/>
                    <Button Content="Ukončit"
                            Click="AppCurrentShutdown"
                            Margin="5"
                            VerticalAlignment="Bottom"/>
            </StackPanel>
        </Grid>

        <ListView DockPanel.Dock="Right"
                  Width="140"
                  Background="MidnightBlue">
            <!--SelectedValue="{Binding SelectedNotebook, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  ItemsSource="{Binding Notebooks}"-->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="Hello, World!"/>
                </DataTemplate>
            </ListView.ItemTemplate>

        </ListView>
    </DockPanel>
</Window>
