<Window x:Class="MVVMMathProblemsBase.View.UserTypeSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMMathProblemsBase.View"
        mc:Ignorable="d"
        Title="Nezmatematika: Výběr módu" 
        MinHeight="200" 
        MinWidth="400"
        Height="200"
        Width="400">
    <Grid>
        <StackPanel Margin="15" VerticalAlignment="Center">
            <Button x:Name="btnStudent"
                    Margin="10"
                    Click="btnStudent_Click">
                <Label Content="JSEM STUDENT"
                       FontSize="30"
                       FontWeight="Bold"/>
            </Button>
            <Button x:Name="btnTeacher"                   
                    Margin="10"
                    Click="btnTeacher_Click">
                <Label Content="JSEM VYUČUJÍCÍ"
                       FontSize="30"
                       FontWeight="Bold"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
