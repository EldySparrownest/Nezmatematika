<Application x:Class="Nezmatematika.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Nezmatematika"
             StartupUri="View/UserTypeSelectWindow.xaml">
    <Application.Resources>
        <Style TargetType="Button" x:Key="basicBtnS">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="Button" x:Key="mainMenuBtnS" BasedOn="{StaticResource basicBtnS}">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="Label" x:Key="bigLblS">
            <Setter Property="FontSize" Value="20" />
        </Style>
    </Application.Resources>
</Application>
